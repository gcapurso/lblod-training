{{#if this.isLoggedAsAdmin}}
    <BooksEditing 
        @model={{@model}}
        @onSelect={{selectOption}}
        @onCreate={{createBook}}
        @onRemove={{removeBook}} 
        @title={{newTitle}}
        @isbn={{newIsbn}}
        @price={{newPrice}}
    />
{{else}}
    <BooksShop @books={{@model.books}} />
{{/if}}