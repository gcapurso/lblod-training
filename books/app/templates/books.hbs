{{#if isAdmin}}
    <h2>Welcome Admin in the BookStore</h2>
    <BooksEditing 
        @model={{@model}}
        @onSelect={{selectOption}}
        @onCreate={{createBook}}
        @onRemove={{removeBook}} 
        @title={{newTitle}}
        @isbn={{newIsbn}}
        @price={{newPrice}}
    />
{{else}}
    <h2>Welcome Guest in the BookStore</h2>
    <BooksShop @books={{@model.books}} />
{{/if}}



